def chatbot_response(user_input):
    user_input = user_input.lower().strip()
    
    # Predefined rules and responses
    if "hello" in user_input or "hi" in user_input:
        return "Hello! How can I assist you today?"
    elif "how are you" in user_input:
        return "I'm just a bot, but thanks for asking! How can I help you?"
    elif "your name" in user_input:
        return "I'm a rule-based chatbot created to assist you."
    elif "bye" in user_input or "exit" in user_input:
        return "Goodbye! Have a great day."
    elif "help" in user_input:
        return "You can ask me simple questions like greetings, my name, or ask for help."
